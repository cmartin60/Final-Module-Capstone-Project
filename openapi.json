          }
        },
        "responses": {
          "200": {
            "description": "Borrow record updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BorrowRecord"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "404": {
            "description": "Borrow record not found"
          }
        }
